@model StudentInformationSystemWebApp.Models.Course
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save</h2>

@using (Html.BeginForm("Save", "Course", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Save Course Information</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Code)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Credit, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Credit, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Credit)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactHour, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ContactHour, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContactHour)
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
    <div class="form-group">
        @if (ViewBag.messege != null)
        {
            <label><b>@ViewBag.messege</b></label>
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



